<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: @event %>

  <%= f.label :名字 %>
  <%= f.email_field :name, class: 'form-control' %>

  <%= f.label :描述 %>
  <%= f.text_area :description, class: 'form-control' %>

  <%= f.label :日期 %>
  <%= f.date_field :date, class: 'form-control' %>

  <%= f.label :封面 %>
  <%= f.file_field :thumbnail, class: 'form-control' %>

  <%= f.submit "Create", class: "btn btn-primary", style: 'margin-top: 10px;' %>
<% end %>