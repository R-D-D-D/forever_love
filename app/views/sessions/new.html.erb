<% provide(:title, "Log in") %>
<div class="container">
  <div class="row height">
    <div class="col-md-6 offset-md-3">
      <h1 class="center text-light">Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, class: 'text-light' %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password, class: 'text-light' %>
        <%= f.password_field :password, class: 'form-control' %>

        <div class="form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me_on_this_computer, class: 'form-check-label text-light' %>
        </div>

        <%= f.submit "Log in", class: "btn btn-primary", style: 'margin-top: 10px;' %>
      <% end %>
    </div>
  </div>
</div>
