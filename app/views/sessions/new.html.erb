<% provide(:title, "Log in") %>
<header class="my-nav">
  <nav class="navbar navbar-light bg-light" id="my-navbar">
    <%= link_to "老婆生日快乐！", root_url, class: 'navbar-brand', id: 'logo' %>
    <div>
      <ul class="nav">
        <li class="nav-item">
            <%= link_to "登陆", login_path, class: 'nav-link' %>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="row height-20">
      <div class="col">
        <p></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h1 class="center text-light">Log in</h1>
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email, class: 'text-light' %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password, class: 'text-light' %>
          <%= f.password_field :password, class: 'form-control' %>

          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me_on_this_computer, class: 'form-check-label text-light' %>
          </div>

          <%= f.submit "Log in", class: "btn btn-primary", style: 'margin-top: 10px;' %>
        <% end %>
      </div>
    </div>
  </div>

</header>
